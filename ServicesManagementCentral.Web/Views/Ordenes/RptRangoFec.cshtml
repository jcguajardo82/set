                <table width="100%" border="0" cellspacing="0" cellpadding="0">
                    <tbody>
                        <tr>
                            <td colspan="5" align="center">
                                <font face="verdana" size="2"><b>Reporte diario de ventas SORIANA.COM<br>del @ViewBag.fecIni<br>@ViewBag.fecFin</b></font>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div class="row">
                    @*===============================ORDENES ENTREGADAS==================================*@
                    @{
