@{
    ViewBag.Title = "Orden";
    Layout = "~/Views/Shared/Empty.cshtml";
}




<div class="wrapper wrapper-content animated fadeInRight" style="padding-top: 0px;">
    <div class="row">
        <div class="col-lg-12">
