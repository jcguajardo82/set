                                               , int.Parse(p["Orden"].ToString()), int.Parse(Session["Id_Num_UN"].ToString())).Tables[0].Rows)
                                                {

                                                    if (item["TotalOfertaSurt"] == null)
                                                    {
                                                        if (item["TotalNormalSurt"] == null)
