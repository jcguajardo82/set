                                                    vlst2 = vlst2 + (decimal)@item["vlst2"];
                                                    vlst3 = vlst3 + (decimal)@item["vlst3"];
                                                    vlst4 = vlst4 + (decimal)@item["vlst4"];
                                                    vlst5 = vlst5 + (decimal)@item["vlst5"];

