                                    </tr>
                                    @foreach (System.Data.DataRow p in dt.Rows)
                                    {
                                        <tr>
                                            <td style="text-align:right;">@p["Orden"]</td>
                                            <td>@p["Cliente"]</td>
                                            <td style="text-align:center;">@p["Fecha"]</td>
